{
  "name": "coldsendz-nextjs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "if [ \"$WORKER_ONLY\" = \"1\" ]; then echo 'Skipping Next.js build for worker'; else next build; fi",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "setup-admin": "node scripts/setup-admin.js",
    "worker": "node worker-commonjs.js",
    "worker:dev": "node worker-commonjs.js",
    "start:local": "bash start-local-dev.sh",
    "start:local:win": "powershell -ExecutionPolicy Bypass -File start-local-dev.ps1",
    "worker:local": "bash start-worker.sh",
    "worker:local:win": "powershell -ExecutionPolicy Bypass -File start-worker.ps1",
    "test:setup": "node test-local-setup.js",
    "db:health": "node -e \"require('./src/lib/db').healthCheck().then(r => console.log('DB Health:', r ? 'OK' : 'FAILED')).catch(e => console.log('DB Error:', e.message))\"",
    "build:app": "WORKER_ONLY=0 npm run build",
    "build:worker": "WORKER_ONLY=1 npm run build",
    "deploy:vercel": "vercel --prod",
    "deploy:railway": "railway up"
  },
  "dependencies": {
    "@azure/arm-communication": "^4.1.0",
    "@azure/communication-email": "^1.0.0",
    "@azure/identity": "^4.12.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/papaparse": "^5.3.14",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.10.0",
    "csv-parser": "^3.0.0",
    "dotenv": "^17.2.3",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.20.0",
    "multer": "^1.4.5-lts.1",
    "next": "14.0.3",
    "papaparse": "^5.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@types/multer": "^1.4.11",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-config-next": "14.0.3",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2"
  }
}