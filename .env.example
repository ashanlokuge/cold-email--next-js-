# Environment variables for local development
# Copy this file to .env and fill in your actual Azure credentials

# Azure Communication Services - REQUIRED
COMMUNICATION_SERVICES_CONNECTION_STRING=endpoint=https://your-service.communication.azure.com/;accesskey=YOUR_ACCESS_KEY

# Azure Resource Configuration - REQUIRED
AZ_SUBSCRIPTION_ID=your_azure_subscription_id_here
AZ_RESOURCE_GROUP=your_resource_group_name_here
AZ_EMAIL_SERVICE_NAME=your_email_service_name_here
AZ_EMAIL_DOMAIN=your_verified_domain_here

# Optional Settings (these have default values)
RATE_PER_MINUTE=60
JITTER_PCT=20
MAX_RETRIES=3

# Authentication method (Use 'cli' for development, 'service-principal' for production)
AZURE_AUTH_METHOD=service-principal

# Service Principal Credentials (for production deployment)
AZURE_CLIENT_ID=your_azure_client_id_here
AZURE_CLIENT_SECRET=your_azure_client_secret_here
AZURE_TENANT_ID=your_azure_tenant_id_here

# Development settings
NODE_ENV=development
PORT=3000